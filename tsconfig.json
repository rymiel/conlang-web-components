{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "module": "NodeNext",
    "target": "es2021",
    "jsx": "react-jsx",
    "outDir": "build/",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "noErrorTruncation": true,
    "declaration": true
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["./build/**/*"]
}
